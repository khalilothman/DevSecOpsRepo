pipeline {
  agent any 
    
  tools {
    maven 'Maven'
  }
  
  
  stages {    
     stage ('Initialize') {
      steps {
        bat '''
                    echo "PATH = ${PATH}"
                    echo "MAVEN_HOME = ${MAVEN_HOME}"
            ''' 
          }
            }
                         
    stage ('Check-Git-Secrets') {
      steps {
        bat 'rm trufflehog || true'
        bat 'docker run gesellix/trufflehog --json https://github.com/cehkunal/webapp.git > trufflehog'
        bat 'cat trufflehog'
      }
    }
    
    
    
     stage ('Build') {
      steps {
      bat 'mvn clean package'
       }
    }
       
   

  
       
       
       
                            
      }
      }
