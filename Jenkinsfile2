pipeline {

  agent any 
  tools {
    maven 'Maven'
  }
  
   stages {    
     stage ('Initialize') {
      steps {
        sh '''
                    echo "PATH = ${PATH}"
                    echo "M2_HOME = ${M2_HOME}"
           ''' }
       }
    
    stage ('Build') {
      steps {
      sh 'mvn clean package'
       }
    }
    
    stage ('Deploy-To-Tomcat') {
            steps {
           sshagent(['Tomcat']) {
                sh 'scp -o StrictHostKeyChecking=no target/*.war user@18.220.87.220:/bitnami/tomcat/data/examples/webapp.war'
              }      
           }       
    }
    
    
    
  } 
  }
